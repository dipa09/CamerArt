<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Photo">
        <ListPreference
            app:key="pref_flash"
            app:title="Flash"
            app:entries="@array/flash_names"
            app:entryValues="@array/flash_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="auto" />

        <ListPreference
            app:key="pref_capture"
            app:title="Mode"
            app:entries="@array/capture_names"
            app:entryValues="@array/capture_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="latency" />

        <SeekBarPreference
            app:key="pref_jpeg_quality"
            app:title="JPEG Compression Quality"
            app:min="1"
            app:showSeekBarValue="true"
            android:max="100" />

        <ListPreference
            app:key="pref_rotation"
            app:title="Force Rotation"
            app:entries="@array/rotation_names"
            app:entryValues="@array/rotation_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="0" />

        <ListPreference
            app:key="pref_image_format"
            app:title="Format"
            app:entries="@array/empty"
            app:entryValues="@array/empty"
            app:useSimpleSummaryProvider="false" />

        <ListPreference
            app:key="pref_extension"
            app:title="Extension"
            app:entries="@array/extensions"
            app:entryValues="@array/extensions"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="None" />

        <SwitchPreferenceCompat
            app:key="pref_lumus"
            app:title="Lumus"
            app:summary="Show average luminosity"
            app:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Video">
        <SwitchPreferenceCompat
            app:key="pref_use_video_temp"
            app:title="Do a video"
            app:defaultValue="false" />

        <ListPreference
            app:key="pref_video_quality"
            app:title="Quality"
            app:entries="@array/empty"
            app:entryValues="@array/empty"
            app:useSimpleSummaryProvider="false" />

        <EditTextPreference
            app:key="pref_video_duration"
            app:title="Duration"
            app:summary="Limit video recording duration" />

        <SwitchPreferenceCompat
            app:key="pref_show_video_stats"
            app:title="Show Stats"
            app:summary="Display recording stats on screen"
            app:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Preview">
        <ListPreference
            app:key="pref_scale"
            app:title="Scaling"
            app:entries="@array/scale_names"
            app:entryValues="@array/scale_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="center" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Misc">
        <SeekBarPreference
            app:key="pref_countdown"
            app:title="Countdown"
            app:showSeekBarValue="true"
            app:defaultValue="0"
            app:min="0"
            android:max="60"
            app:seekBarIncrement="1"
            app:summary="Wait a bit before taking the photo/video" />

        <SeekBarPreference
            app:key="pref_exposure"
            app:title="Exposure"
            app:showSeekBarValue="true"
            app:enabled="false" />

    </PreferenceCategory>

</PreferenceScreen>